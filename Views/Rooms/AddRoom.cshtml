@model MakeUpAName.Models.PatientIntake.RoomBedViewModel
<h2>Create Room and Bed</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Room.RoomNo" class="control-label">Room Number</label>
        <input asp-for="Room.RoomNo" class="form-control" />
        <span asp-validation-for="Room.RoomNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bed.BedNo" class="control-label">Bed Number</label>
        <input asp-for="Bed.BedNo" class="form-control" />
        <span asp-validation-for="Bed.BedNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bed.IsOccupied" class="control-label">Is Occupied</label>
        <select asp-for="Bed.IsOccupied" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Bed.IsOccupied" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>